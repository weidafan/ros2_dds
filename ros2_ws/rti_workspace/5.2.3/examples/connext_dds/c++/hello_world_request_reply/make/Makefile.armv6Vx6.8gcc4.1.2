# Note:
# - To use this Makefile, you must have the 'NDDSHOME' environment variable
#   set to the location of RTI Data Distribution Service.
# 
# - You need to invoke the make command from the root directory of this example.
#
# - To enable debugging information, set the Makefile variable 'DEBUG' to '1'.
# Example:
#   make -f make/Makefile.armv6Vx6.8gcc4.1.2 DEBUG=1


# Defines required Make variables. They will be used in the Makefile.common
# to define the rules to define the build process for this application.

# if dynamic linking, indicate to common not to link shared libs
ifeq ($(SHAREDLIB),1)
VX_SHAREDLIB=1
endif

ARCH=armv6Vx6.8gcc4.1.2

CXX = $(WIND_GNU_PATH)/$(WIND_HOST_TYPE)/bin/ccarm
CXXFLAGS = -mlong-calls
CXXLD = $(WIND_GNU_PATH)/$(WIND_HOST_TYPE)/bin/ldarm
CXXLDFLAGS =
DEFINES = -DRTI_VXWORKS -march=armv6 -fno-builtin -mlong-calls -DTOOL=gnu -DCPU=ARMARCH6

SYSLIBS = 
VX_INCLUDES = -I$(WIND_BASE)/target/h -I$(WIND_BASE)/target/h/wrn/coreip \
 -D_VSB_CONFIG_FILE=\"/local/VxWorks/GPP-3.8/vxworks-6.8/target/lib/h/config/vsbConfig.h\"
OPTS = -r -EL -X
NM = $(WIND_HOME)/utilities-1.0/$(WIND_HOST_TYPE)/bin/nmarm
MUNCH = ${WIND_FOUNDATION_PATH}/$(WIND_HOST_TYPE)/bin/wtxtcl.ex $(WIND_BASE)/host/resource/hutils/tcl/munch.tcl -c arm
MUNCHFLAGS            = -T $(WIND_BASE)/target/h/tool/gnu/ldscripts/link.OUT

# The rest of the rules are in the 'Makefile.common'
include make/Makefile.common

