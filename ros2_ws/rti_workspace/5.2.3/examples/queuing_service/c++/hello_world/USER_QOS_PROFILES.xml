<?xml version="1.0"?>
<!-- 
Description
XML QoS Profile for HelloWorldQueue

For more information about XML QoS Profiles see Chapter 15 in the 
RTI Connext user manual.
-->
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/5.2.3/rti_dds_qos_profiles.xsd"
     version="5.2.3">
  <!-- QoS Library containing the QoS profile used in the generated example.

        A QoS library is a named set of QoS profiles.
    -->
  <qos_library name="HelloWorldQueue_Library">

    <!-- QoS profile used to configure reliable communication between the DataWriter 
             and DataReader created in the example code.

             A QoS profile groups a set of related QoS.
        -->
    <qos_profile name="HelloWorldQueue_Profile" 
        base_name="BuiltinQosLibExp::Generic.StrictReliable" 
        is_default_qos="true">
      <!-- uncomment the following for debugging purpose -->
      <!--
      <participant_factory_qos>
        <logging>
          <verbosity>WARNING</verbosity>
        </logging>
      </participant_factory_qos>-->

      <participant_qos>
        <transport_builtin>
          <mask>UDPv4</mask>
        </transport_builtin>
      </participant_qos>
      
      <datawriter_qos>
        <reliability>
          <acknowledgment_kind>
              APPLICATION_EXPLICIT_ACKNOWLEDGMENT_MODE 
          </acknowledgment_kind>
        </reliability>
        <property>
          <value>
            <element>
              <name>dds.data_writer.history.memory_manager.fast_pool.pool_buffer_max_size</name>
              <value>4096</value>
            </element>
          </value>
        </property>
      </datawriter_qos>

      <datareader_qos>
        <reliability>
          <acknowledgment_kind>
              APPLICATION_EXPLICIT_ACKNOWLEDGMENT_MODE
          </acknowledgment_kind>
        </reliability>
        <reader_resource_limits>
          <max_app_ack_response_length>1</max_app_ack_response_length>
        </reader_resource_limits>
        <property>
          <value>
            <element>
              <name>dds.data_reader.history.memory_manager.fast_pool.pool_buffer_max_size</name>
              <value>4096</value>
            </element>
          </value>
        </property>
      </datareader_qos>

    </qos_profile>
  </qos_library>
</dds>
