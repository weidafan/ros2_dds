filename=$0
script_dir=`cd "\`dirname "$filename"\`"; pwd`
application_name=jms2dds
script_version=5.2.3
needs_shared_libraries="false"

if [ -f "$script_dir/../resource/scripts/rticommon.sh" ]
then
    rticommon_script_dir=$script_dir/../resource/scripts
    . "$rticommon_script_dir/rticommon.sh"
else
    rticommon_script_dir=$script_dir/../../ndds.4.1/resource/scripts
    lib_dir=$script_dir/../../ndds.4.1/lib
    jre_dir=$script_dir/../../ndds.4.1/resource/app/jre
    . "$rticommon_script_dir/rticommon.sh"
    app_lib_java_dir=$script_dir/../class
fi

if [ "x$JREHOME" = "x" ] || [ ! -x "$JREHOME" ]
then
    echo "Warning: OS $os may not be supported. Be sure JREHOME is set."
    echo $JREHOME
    exit
fi

"$JREHOME/bin/java" \
    -cp "$app_lib_java_dir/nddsjava.jar:$app_lib_java_dir/j2ee.jar:$app_lib_java_dir/rtijms.jar" \
    com.rti.jms.XMLTransformationUtility  "$@"
