CXX = g++
CXXFLAGS = -DRTI_UNIX -DRTI_LINUX -m32
CXXLD = g++
CXXLDFLAGS = -m32 -static-libgcc
SYSLIBS = -ldl -lnsl -lm -lpthread -lrt

