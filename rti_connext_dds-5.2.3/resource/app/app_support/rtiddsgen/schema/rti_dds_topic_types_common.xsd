<xsd:schema targetNamespace="http://www.omg.org/dds"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <xsd:simpleType name="char">
    <xsd:restriction base="xsd:string">
      <xsd:length value="1" fixed="true"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="wchar">
    <xsd:restriction base="xsd:string"/>
  </xsd:simpleType>

  <xsd:simpleType name="wstring">
    <xsd:restriction base="xsd:string"/>
  </xsd:simpleType>

  <xsd:simpleType name="longDouble">
    <xsd:restriction base="xsd:double"/>
  </xsd:simpleType>

  <xsd:simpleType name="forwardDclValueType">
    <xsd:restriction base="xsd:string"/>
  </xsd:simpleType>

  <xsd:simpleType name="forwardDclStruct">
    <xsd:restriction base="xsd:string"/>
  </xsd:simpleType>

  <xsd:simpleType name="forwardDclUnion">
    <xsd:restriction base="xsd:string"/>
  </xsd:simpleType>
  
</xsd:schema>
